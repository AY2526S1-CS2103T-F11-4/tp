@startuml
!include style.puml
skinparam ArrowFontStyle plain

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":ContactBookParser" as ContactBookParser LOGIC_COLOR
participant ":SortCommandParser" as SortCommandParser LOGIC_COLOR
participant "command:SortCommand" as SortCommand LOGIC_COLOR
participant ":CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
end box
[-> LogicManager : execute("sort f/name o/asc")
activate LogicManager

LogicManager -> ContactBookParser : parseCommand("sort f/name o/asc")
activate ContactBookParser

create SortCommandParser
ContactBookParser -> SortCommandParser
activate SortCommandParser

SortCommandParser --> ContactBookParser
deactivate SortCommandParser

ContactBookParser -> SortCommandParser : parse("f/name o/asc")
activate SortCommandParser

create SortCommand
SortCommandParser -> SortCommand
activate SortCommand

SortCommand --> SortCommandParser : command
deactivate SortCommand

SortCommandParser --> ContactBookParser : command
deactivate SortCommandParser

SortCommandParser -[hidden]-> ContactBookParser
destroy SortCommandParser

ContactBookParser --> LogicManager : command
deactivate ContactBookParser

LogicManager -> SortCommand : execute()
activate SortCommand

SortCommand -> SortCommand : getComparator()
activate SortCommand

SortCommand --> SortCommand
deactivate SortCommand

SortCommand -> Model : sortPersons(comparator)
activate Model

Model --> SortCommand
deactivate Model

create CommandResult
SortCommand -> CommandResult
activate CommandResult

CommandResult --> SortCommand
deactivate CommandResult

SortCommand --> LogicManager : commandResult
deactivate SortCommand

[<--LogicManager
deactivate LogicManager
@enduml
