@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model as ModelPackage <<Rectangle>>{
Class "<<interface>>\nReadOnlyContactBook" as ReadOnlyContactBook
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nReadOnlyCommandHistory" as ReadOnlyCommandHistory

Class "<<interface>>\nModel" as Model
Class ContactBook
Class ModelManager
Class UserPrefs
Class CommandHistory

Class UniquePersonList
Class Person
Class Contact
Class Email
Class Name
Class Phone
Class Tag

Class I #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

ContactBook .up.|> ReadOnlyContactBook

CommandHistory .Up.|> ReadOnlyCommandHistory

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlyContactBook
ModelManager -left-> "1" ContactBook
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

ContactBook *--> "1" UniquePersonList
UniquePersonList --> "~* all" Person
Person *--> Name
Person *--> Phone
Person *--> Email
Person *--> Contact
Person *--> "*" Tag

Person -[hidden]up--> I
UniquePersonList -[hidden]right-> I

Name -[hidden]right-> Phone
Phone -[hidden]right-> Contact
Contact -[hidden]right-> Email

ModelManager --> "~* filtered" Person
@enduml
